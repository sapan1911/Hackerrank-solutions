def pageCount(n, p):
    #
    # Write your code here.
    #
    if p%2!=0:
        t= (p-1)/2
    else :
        t=p/2
    if n%2!=0:

        if (n-p)%2 !=0:
            r= (n-p-1)/2
        else :
            r=(n-p)/2
    else :
        if (n-p)%2 !=0:
            r= (n-p+1)/2
        else :
            r=(n-p)/2
    result = min(int(t),int(r))
    return result
